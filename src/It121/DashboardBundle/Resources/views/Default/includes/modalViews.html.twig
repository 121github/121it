<!-- MODAL VIEWS -->
{# Project #}
{% if projectsMenu is defined %}
	{% for key,groups in projectsMenu %}
		{% for keyProject,project in groups %}
			<!-- Modal Show -->
			<div class="modal fade" id="show_{{ project.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			  <div class="modal-dialog">
			    <div class="modal-content">
			    </div>
			  </div>
			</div>
		{% endfor %}
	{% endfor %}
{% endif %}

{# Management Project #}
{% if managementProjectsMenu is defined %}
	{% for key,groups in managementProjectsMenu %}
		{% for keyProject,project in groups %}
			<!-- Modal Show -->
			<div class="modal fade" id="show_{{ project.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			  <div class="modal-dialog">
			    <div class="modal-content">
			    </div>
			  </div>
			</div>
		{% endfor %}
	{% endfor %}
{% endif %}


{# Service #}
{% if servicesMenu is defined %}
	{% for service in servicesMenu %}
		<!-- Modal Show -->
		<div class="modal fade" id="server_show_{{ service.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		    </div>
		  </div>
		</div>
	{% endfor %}
{% endif %}

<div class="modal fade" id="show_server" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    	<div class="modal-body">
      	</div>
    </div>
  </div>
</div>

<script type="text/javascript">
	$('a.external').on('click', function(e) {
	    e.preventDefault();
	    var url = $(this).attr('href');
	    $(".modal-body").html('<iframe width="100%" height="100%" frameborder="0" scrolling="yes" allowtransparency="true" src="'+url+'"></iframe>');
	
	});
	
	$('#show_server').on('show.bs.modal', function () {
	
	    $(this).find('.modal-dialog').css({
	              width:'90%', //choose your width
	              height:'80%', 
	              'padding':'0'
	       });
	     $(this).find('.modal-content').css({
	              height:'100%', 
	              'border-radius':'0',
	              'padding':'0'
	       });
	     $(this).find('.modal-body').css({
	              width:'auto',
	              height:'100%', 
	              'padding':'0'
	       });
	})
</script>