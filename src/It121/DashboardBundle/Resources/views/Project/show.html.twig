<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	<h4 class="modal-title" id="myModalLabel">{{ entity.name }}</h4>
</div>
<div class="modal-body">

	<div class="panel-group" id="accordion_{{ entity.id }}">
	  <div class="panel panel-default">
	    <div class="panel-heading">
	      <h4 class="panel-title">
	        <a data-toggle="collapse" data-parent='#accordion_{{ entity.id }}' href="#collapseOne_{{ entity.id }}">
	          Project Details
	        </a>
	      </h4>
	    </div>
	    <div id="collapseOne_{{ entity.id }}" class="panel-collapse collapse in">
	      <div class="panel-body">
	        <table class="table table-hover">
				<tbody>
					<tr>
						<th>#</th>
						<td>{{ entity.id }}</td>
					</tr>
		            <tr>
		                <th>Name</th>
		                <td>
		                	{% if (entity.server) %}
		                		<a href="{{ entity.server.url}}" target="_blank">{{ entity.name}}</a>
		                	{% else %}
		                		{{ entity.name}}
		                	{% endif %}
		                </td>
		            </tr>
		            <tr>
		                <th>Group</th>
		                <td>{{ entity.group}}</td>
		            </tr>
		            <tr>
		                <th>Start Date</th>
		                <td>{{ entity.startDate|date('Y-m-d H:i:s') }}</td>
		            </tr>
		            <tr>
		                <th>End Date</th>
		                <td>
		                	{% if (entity.endDate is null) %}
		                		{{ "-" }}
		                	{% else %}
								{{ entity.endDate|date('Y-m-d H:i:s') }}
		                	{% endif %}
		                </td>
		            </tr>
		            <tr>
		                <th>Last Deployment</th>
		                <td>
		                	{% if (entity.lastDeployment is null) %}
		                		{{ "-" }}
		                	{% else %}
								{{ entity.lastDeployment|date('Y-m-d H:i:s') }}
		                	{% endif %}
		                </td>
		            </tr>
		        </tbody>
		    </table>
	      </div>
	    </div>
	  </div>
	  <div class="panel panel-default">
	    <div class="panel-heading">
	      <h4 class="panel-title">
	        <a data-toggle="collapse" data-parent='#accordion_{{ entity.id }}' href="#collapseTwo_{{ entity.id }}">
	          Server Status
	        </a>
	      </h4>
	    </div>
	    <div id="collapseTwo_{{ entity.id }}" class="panel-collapse collapse">
	      <div class="panel-body">
	      	 <table class="table table-hover">
				<tbody>
					<tr>
		                <th>Server</th>
		                <td>{{ entity.server }}</td>
		            </tr>
		            <tr>
		                <th>Status</th>
		                <td>{{ entity.server.status }}</td>
		            </tr>
		            <tr>
		                <th>Latency</th>
		                <td>{{ entity.server.latency }}</td>
		            </tr>
		            <tr>
		                <th>Last Online</th>
		                <td>
		                	{% if (entity.server.lastOnline is null) %}
		                		{{ "-" }}
		                	{% else %}
								{{ entity.server.lastOnline|date('Y-m-d H:i:s') }}
		                	{% endif %}
		                </td>
		            </tr>
		            <tr>
		                <th>Last Check</th>
		                <td>
		                	{% if (entity.server.lastCheck is null) %}
		                		{{ "-" }}
		                	{% else %}
								{{ entity.server.lastCheck|date('Y-m-d H:i:s') }}
		                	{% endif %}
		                </td>
		            </tr>
		        </tbody>
		    </table>
	      </div>
	    </div>
	  </div>
	  {% if (deployment|length > 0) %}
		  <div class="panel panel-default">
		    <div class="panel-heading">
		      <h4 class="panel-title">
		        <a data-toggle="collapse" data-parent='#accordion_{{ entity.id }}' href="#collapseThree_{{ entity.id }}">
		          Deployment (Continuous Integration)
		        </a>
		      </h4>
		    </div>
		    <div id="collapseThree_{{ entity.id }}" class="panel-collapse collapse">
		      <div class="panel-body">
		      	<table class="table table-hover">
			        {% for project in deployment %}
			          	{% if project.status == 'stable' %}
		        			{% set status = "success" %}
		        			{% set icon_status = "fa-check" %}
		        		{% elseif 'broken' in project.status %}
		        			{% set status = "danger" %}
		        			{% set icon_status = "fa-remove" %}
		        		{% elseif project.status == 'back to normal' %}
		        			{% set status = "warning" %}
		        			{% set icon_status = "fa-eye" %}
		        		{% elseif '?' in project.status %}
		        			{% set status = "info" %}
		        		{% endif %}
			          	<tr class="pop-left {{ status }}">
						  <td><span class="fa fa-gears fa-1x"></span></td>
						  <td><a href="{{ project.link }}" target="_blank">{{ "#" ~ project.version }}</a></td>
						  <td>{{ project.status }}</a></td>
						  <td>
						  	{% if status == "info" %}
						  		<img alt="121CustomerInsight" src="{{ asset('bundles/backend/images/ajax-loader.gif') }}" width="25px;">
						  	{% else %}
						  		<span class="fa {{ icon_status }} fa-1x"></span>
						  	{% endif %}
						  </td>
						</tr>
			          {% endfor %}
			  	</table>
		      </div>
		    </div>
		  </div>
		{% endif %}
	</div>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>
