<form class="form-horizontal" id="delete_form_{{ entity.id }}" role="form">
	{{ form_row(delete_form._token) }}
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		<h4 class="modal-title" id="myModalLabel">{{ "Delete User -  " ~ entity.userDetail  }}</h4>
	</div>
	<div class="modal-body">
		  <div id="errors">
		  	{{ form_errors(delete_form) }}
		  </div>
		  Are you sure?
		  
	</div>
	<div class="modal-footer">
	    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
		<button type="submit" class="btn btn-success">Yes</button>
	</div>
</form>


<script type="text/javascript">
	$(document).ready(function(){
		var url = "{{ path('user_delete', {'id': entity.id}) }}";
		var user_id = "{{ entity.id }}";
		user.remove(user_id, url)
	});
</script>
    