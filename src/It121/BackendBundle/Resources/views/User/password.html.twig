<form class="form-horizontal" id="password_form_{{ entity.id }}" role="form">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		<h4 class="modal-title" id="myModalLabel">{{ "Change User Password - " ~ entity.userDetail  }}</h4>
	</div>
	<div class="modal-body">
		  <div id="errors">
		  	{{ form_errors(password_form) }}
		  </div>
		  
		  
		  {{ form_errors(password_form.oldPassword) }}
		  <div class="form-group">
		    <label class="col-sm-3 control-label">{{ form_label(password_form.oldPassword) }}</label>
		    <div class="col-sm-9">{{ form_widget(password_form.oldPassword) }}</div>
		  </div>
		  
		  {{ form_errors(password_form.password) }}
		  <div class="form-group">
		    <label class="col-sm-3 control-label">{{ form_label(password_form.password) }}</label>
		    <div class="col-sm-9">{{ form_widget(password_form.password) }}</div>
		  </div>
		  
		  {{ form_row(password_form._token) }}
	</div>
	<div class="modal-footer">
	    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
		<button type="submit" class="btn btn-success">Change Password</button>
	</div>
</form>


<script type="text/javascript">
	$(document).ready(function(){
		var url = "{{ path('user_password', {'id': entity.id}) }}";
		var user_id = "{{ entity.id }}";
		user.change_password(user_id, url)
	});
</script>
    