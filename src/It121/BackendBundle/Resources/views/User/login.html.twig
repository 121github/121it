{% extends '::backend.html.twig' %}


{% block title %}Access form{% endblock %}
{% block id 'user' %}

{% block content %}
	<div class="login">
		<div id="logo"> 
			<img alt="121CustomerInsight" src="{{ asset('bundles/backend/images/logo_blue.png') }}">
		</div>
		<section class="jumbotron" id="login-box">
			{% if error %}
				<div class="alert alert-danger" role="alert">{{ error.message ~ ", please, try again or contact with the administrator: "}} <a href="mailto:admin@121customerinsight.co.uk" class="alert-link">admin@121customerinsight.co.uk</a></div>
			{% endif %}
			<form class="form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
			  <div class="form-group">
			    <label for="username" class="col-sm-2 control-label">Login</label>
			    <div class="col-sm-10">
					<input type="text" class="form-control" placeholder="Username" id="username" {{ (error.message is defined)?"":"autofocus" }} name="_username" value="{{ last_username }}" />
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="password" class="col-sm-2 control-label">Password</label>
			    <div class="col-sm-10">
			      <input type="password" class="form-control" name="_password" id="password" {{ (error.message is defined)?"autofocus":"" }} placeholder="Password">
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      <div class="checkbox">
			        <label for="not_close">
			          <input type="checkbox" id="not_close" name="_remember_me"> Remember me
			        </label>
			      </div>
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      <button type="submit" name="login" value="Sign In" class="btn btn-default">Sign in</button>
			    </div>
			  </div>
			</form>
		</section>
	</div>
{% endblock %}