<form class="form-horizontal" id="new_form" role="form">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		<h4 class="modal-title" id="myModalLabel">New Server</h4>
	</div>
	<div class="modal-body">
		  <div id="errors">
		  	{{ form_errors(form) }}
		  </div>
		  
		  {{ form_errors(form.name) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.name) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.name) }}</div>
		  </div>
		  
		  {{ form_errors(form.domain) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.domain) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.domain) }}</div>
		  </div>
		  
		  {{ form_errors(form.user) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.user) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.user) }}</div>
		  </div>
		  
		  {{ form_errors(form.password) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.password) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.password) }}</div>
		  </div>
		  
		  {{ form_errors(form.port) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.port) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.port) }}</div>
		  </div>
		  
		  {{ form_errors(form.type) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.type) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.type) }}</div>
		  </div>
		  
		  {{ form_errors(form.subtype) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.subtype) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.subtype) }}</div>
		  </div>
		  
		  {{ form_errors(form.sendEmail) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.sendEmail) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.sendEmail) }}</div>
		  </div>
		  
		  {{ form_errors(form.monitoring) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.monitoring) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.monitoring) }}</div>
		  </div>
		  
		  {{ form_row(form._token) }}
	</div>
	<div class="modal-footer">
	    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
		<button type="submit" class="btn btn-success">Save</button>
	</div>
</form>


<script type="text/javascript">
	$(document).ready(function(){
		var url = "{{ path('server_create') }}";
		server.create(url)
	});
</script>
    