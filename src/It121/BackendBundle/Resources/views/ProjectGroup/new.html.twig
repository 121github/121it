<form class="form-horizontal" id="new_form" role="form">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		<h4 class="modal-title" id="myModalLabel">New Group</h4>
	</div>
	<div class="modal-body">
		  <div id="errors">
		  	{{ form_errors(form) }}
		  </div>
		  
		  {{ form_errors(form.name) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.name) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.name) }}</div>
		  </div>
		  
		  {{ form_errors(form.description) }}
		  <div class="form-group">
		    <label class="col-sm-4 control-label">{{ form_label(form.description) }}</label>
		    <div class="col-sm-6">{{ form_widget(form.description) }}</div>
		  </div>
		  
		  {{ form_row(form._token) }}
	</div>
	<div class="modal-footer">
	    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
		<button type="submit" class="btn btn-success">Save</button>
	</div>
</form>


<script type="text/javascript">
	$(document).ready(function(){
		var url = "{{ path('projectgroup_create') }}";
		projectgroup.create(url);
	});
</script>   
    