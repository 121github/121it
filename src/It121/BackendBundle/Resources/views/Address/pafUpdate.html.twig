<form class="form-horizontal" id="import_form" role="form">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">PAF Updater</h4>
    </div>
    <div class="modal-body">
        <div id="errors">
            {{ form_errors(import_form) }}
        </div>


        {{ form_errors(import_form.file) }}
        <div class="form-group">
            <label class="col-sm-3 control-label">{{ form_label(import_form.file) }}</label>
            <div class="col-sm-9">{{ form_widget(import_form.file) }}</div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-default btn-save" data-dismiss="modal">Save</button>
        <button type="submit" class="btn btn-success">Import</button>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function(){
        var url = "{{ path('address_paf_import') }}";
        address.init(url);
        address.importPaf(url);
    });
</script>