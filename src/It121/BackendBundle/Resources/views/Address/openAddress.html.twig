{% extends '::backend.html.twig' %}

{% block title %}Address List{% endblock %}

{% block content -%}

<div style="margin-bottom: 10px;">

	{#<a href="{{ path('address_paf_update') }}" class="btn btn-success fa fa-refresh" data-toggle="modal" data-target="#updatePaf" > Update PAF Postcodes</a>#}
    <a href="{{ path('address_paf') }}" class="btn btn-success fa fa-institution" data-toggle="modal" > PAF Addresses</a>
	<a href="{{ path('nelmio_api_doc_index') }}" class="btn btn-warning fa fa-eye" target="_blank" > API</a>
	<!-- Modal New -->
	<div class="modal fade" id="new" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
		<div class="modal-content">
		</div>
	  </div>
	</div>
</div>

<div class="row pagination">
	<div class="col-md-12">
		<div class="row">
			<div class="col-md-10">
				{# display navigation #}
				<div class="navigation">
					{{ knp_pagination_render(entities) }}
				</div>
			</div>
			<div class="col-md-2">
				{# total items count #}
				<div class="count pull-right">
					{{ entities.getTotalItemCount ~ " Addresses" }}
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-12">
		<table class="table table-striped jumbotron">
			<thead>
				<tr>
					<th>#</th>
					<th>Postcode</th>
					<th>Address Line 1</th>
                    <th>Address Line 2</th>
                    <th>Address Line 3</th>
                    <th>Address Line 4</th>
                    <th>Locality</th>
                    <th>Town/City</th>
                    <th>Country</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
				</tr>
			</thead>
			<tbody>
			{% for entity in entities %}
				<tr>
					<td><a href="{{ path('address_open_show', { 'id': entity.id }) }}" data-toggle="modal" data-target="#show_{{ entity.id }}">{{ entity.id }}</a></td>
					<td>{{ entity.postcode }}</td>
					<td>{{ entity.add1 }}</td>
					<td>{{ entity.add2 }}</td>
					<td>{{ entity.add3 }}</td>
					<td>{{ entity.add4 }}</td>
					<td>{{ entity.locality }}</td>
					<td>{{ entity.city }}</td>
					<td>{{ entity.country }}</td>
					<td>{{ entity.latitude }}</td>
					<td>{{ entity.longitude }}</td>
				</tr>

				<!-- Modal Show -->
				<div class="modal fade" id="show_{{ entity.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				  <div class="modal-dialog">
					<div class="modal-content">
					</div>
				  </div>
				</div>
			{% endfor %}
			</tbody>
		</table>
	</div>
</div>
    
    {% include 'DashboardBundle:Default:includes/modalViews.html.twig' %}
    
    {% endblock %}
