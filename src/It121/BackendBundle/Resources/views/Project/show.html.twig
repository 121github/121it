<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	<h4 class="modal-title" id="myModalLabel">{{ entity.name }}</h4>
</div>
<div class="modal-body">
	<table class="table table-striped">
		<tbody>
			<tr>
				<th>#</th>
				<td>{{ entity.id }}</td>
			</tr>
            <tr>
                <th>Name</th>
                <td>
                	{% if (entity.server) %}
                		<a href="{{ entity.server}}" target="_blank">{{ entity.name}}</a>
                	{% else %}
                		{{ entity.name}}
                	{% endif %}
                </td>
            </tr>
            <tr>
                <th>Group</th>
                <td>{{ entity.group}}</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>{{ entity.startDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>
                	{% if (entity.endDate is null) %}
                		{{ "-" }}
                	{% else %}
						{{ entity.endDate|date('Y-m-d H:i:s') }}
                	{% endif %}
                </td>
            </tr>
            <tr>
                <th>Server</th>
                <td>{{ entity.server }}</td>
            </tr>
            <tr>
                <th>Last Deployment</th>
                <td>
                	{% if (entity.lastDeployment is null) %}
                		{{ "-" }}
                	{% else %}
						{{ entity.lastDeployment|date('Y-m-d H:i:s') }}
                	{% endif %}
                </td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ entity.createdBy }}</td>
            </tr>
            <tr>
                <th>Createddate</th>
                <td>{{ entity.createdDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Modifiedby</th>
                <td>{{ entity.modifiedBy }}</td>
            </tr>
            <tr>
                <th>Modifieddate</th>
                <td>{{ entity.modifiedDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="modal-footer">
	<a href="{{ path('project_remove', { 'id': entity.id }) }}" class="btn btn-danger pull-left" data-toggle="modal" data-target="#delete_{{ entity.id }}">Delete</a>
	<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	<a href="{{ path('project_edit', { 'id': entity.id }) }}" class="btn btn-warning" data-toggle="modal" data-target="#edit_{{ entity.id }}">Edit</a>
</div>
